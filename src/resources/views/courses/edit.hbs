<div class="container">
  <div class="mt-4">
  <h3>Sửa khóa học</h3>
  <form class="mt-4" method="post" action="/courses/{{course._id}}?_method=PUT">

      <div class="mb-3">
          <label class="form-label" for="name">Tên khóa học</label>
          <input class="form-control" type="text" value="{{course.name}}" name="name">
      </div>
      <div class="mb-3">
          <label class="form-label" for="description">Mô tả</label>
          <textarea class="form-control" name="description" cols="30" rows="5">{{course.description}}</textarea>
      </div>
      <div class="mb-3">
          <label class="form-label" for="level">Trình độ</label>
          <input class="form-control" type="text" value="{{course.level}}" name="level">
      </div>
      <div class="mb-3">
          <label class="form-label" for="videoId">Video ID</label>
          <input class="form-control" type="text" value="{{course.videoId}}" name="videoId">
      </div>

    <button type="submit" class="btn btn-primary mt-3">Lưu lại</button>
  </form>
</div>
</div>

