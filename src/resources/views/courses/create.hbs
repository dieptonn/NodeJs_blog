<div class="container">
  <div class="mt-4">
  <h3>Đăng khóa học</h3>
  <form class="mt-4" method="post" action="/courses/store">

      <div class="mb-3">
          <label class="form-label" for="name">Tên khóa học</label>
          <input class="form-control" type="text" name="name">
      </div>
      <div class="mb-3">
          <label class="form-label" for="description">Mô tả</label>
          <textarea class="form-control" name="description" cols="30" rows="5"></textarea>
      </div>
      <div class="mb-3">
          <label class="form-label" for="level">Trình độ</label>
          <input class="form-control" type="text"  name="level">
      </div>
      <div class="mb-3">
          <label class="form-label" for="videoId">Video ID</label>
          <input class="form-control" type="text"  name="videoId">
      </div>

    <button type="submit" class="btn btn-primary mt-3">Tạo khóa học</button>
  </form>
</div>
</div>
